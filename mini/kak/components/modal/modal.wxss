.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-back {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 9900;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.modal-dialog {
  width: 560rpx;
  overflow: hidden;
  z-index: 9999;
  background: #fff;
  border-radius: 6rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #000000;
  text-align: center;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #000;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #31BFBF;
  text-align: center;
}

.btn-confirm-all {
  width: 100%;
  color: #31BFBF;
  text-align: center;
}
.points-table{
  margin-top: 60rpx;
  border:1px solid #f7f7f7;
  border-right:0;
  border-bottom: 0;
  width: 720;
  font-size:25rpx;
}

.bags-table{
  margin-top: 60rpx;
  border:1px solid #f7f7f7;
  border-right:0;
  border-bottom: 0;
  width: 80%;
  font-size:25rpx;
}

.recycles-table{
  margin-top: 60rpx;
  border:1px solid #f7f7f7;
  border-right:0;
  border-bottom: 0;
  width: 96%;
  font-size:25rpx;
}

.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}

.th,.td{
  padding-top: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f7f7f7;
  border-right: 1px solid #f7f7f7;
  text-align: center;
}

.pageButton{
  width:80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  font-size:25rpx;
}

button::after{ 
	border: none; 
}

button {
  width:248rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #31BFBF;
  color: white;
  font-size:25rpx;
}
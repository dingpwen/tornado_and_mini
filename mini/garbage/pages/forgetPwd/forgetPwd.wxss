  margin-top: 200rpx;
  border-radius: 10rpx;
  padding-bottom: 60rpx;
}
.area_title {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  margin-bottom: 60rpx;
}
.text_title {
  color: #6d493f;
  font-size: 35rpx;
  margin-top: 12rpx;
}
.image-logo {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
